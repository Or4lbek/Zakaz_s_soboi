<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#303030"
            android:textSize="14sp"
            tools:text="Pizza Margarita" />

        <TextView
            android:id="@+id/text_view_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#707070"
            android:textSize="12sp"
            tools:text="Любая маленькая пицца на выбор, порция фри и Coca Cola" />

        <TextView
            android:id="@+id/text_view_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="14sp"
            tools:text="1600 tg" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_product"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            app:cornerRadius="8dp">

            <LinearLayout
                android:id="@+id/cart_container"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/button_minus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:foreground="@drawable/ic_baseline_minus_12"
                    android:foregroundGravity="center" />

                <TextView
                    android:id="@+id/text_view_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:textColor="#131113"
                    android:textSize="16sp"
                    tools:text="1" />
            </LinearLayout>

            <View
                android:id="@+id/button_plus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:foreground="@drawable/ic_baseline_add_12"
                android:foregroundGravity="center" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>